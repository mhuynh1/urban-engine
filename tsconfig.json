{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./dist",
      "strict": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "typeRoots": [
          "node_modules/@types"
      ]
  },
  "include": [
      "src/**/*",
      "public/**/*"
  ],
  "exclude": [
      "dist",
      "node_modules"
  ]
}